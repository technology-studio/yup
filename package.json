{
  "description": "Technology Studio - Yup",
  "repository": {
    "type": "git",
    "url": "https://github.com/technology-studio/yup.git"
  },
  "author": {
    "name": "Technology Studio",
    "email": "npm@technologystudio.sk",
    "url": "https://github.com/technology-studio/"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "concurrently \"yarn workspaces run build:watch\" \"jest --watch\"",
    "coverage": "jest --coverage && open coverage/lcov-report/index.html || xdg-open coverage/lcov-report/index.html",
    "lint": "eslint --format=node_modules/eslint-formatter-pretty --ext .jsx,.js,.ts,.tsx .",
    "fixcode": "eslint --format=node_modules/eslint-formatter-pretty --ext .jsx,.js,.ts,.tsx . --fix",
    "git-hook": "yarn -s lint",
    "print-txo-packages": "yarn list 2> /dev/null|grep @txo|sed 's/.*\\(@txo[^@]*\\)@^*\\([^ ]*\\).*/\\1@\\2/g'|sort|uniq",
    "sanity": "yarn lint && yarn tsc && yarn test && yarn outdated && echo 'success'",
    "wd": "yarn workspace @txo/yup",
    "wpd": "yarn workspace @txo-peer-dep/yup"
  },
  "workspaces": [
    "packages/@txo/*",
    "packages/@txo-peer-dep/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn run git-hook",
      "pre-push": "yarn run git-hook"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@txo-peer-dep/log": "^3.0.0",
    "@txo/log-console": "^2.0.0",
    "@types/jest": "^26.0.20",
    "@types/yup": "^0.29.11",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "concurrently": "^5.2.0",
    "eslint": "^7.17.0",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-config-txo-typescript": "^2.0.0",
    "eslint-formatter-pretty": "^4.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3",
    "yup": "^0.29.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/__tests__/**/*.ts",
      "**/?(*.)(spec|test).ts?(x)"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!@txo).+\\.js$"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/__tests__/Config/",
      "<rootDir>/__tests__/Setup.ts",
      "<rootDir>/__tests__/Utils/"
    ],
    "setupFiles": [
      "<rootDir>/__tests__/Setup.ts"
    ]
  }
}
